
<h1 class="mt-10 text-center text-3xl text-blue-700 font-bold">Lista de productos</h1>
<div class="flickr_pagination flex justify-center mt-10">
  <%= page_entries_info @products %>
  <%= will_paginate @products, :container => false %>
</div>
<div class="grid grid-cols-3 space-x-5 place-items-center w-full mt-10 ">

  <% @products.each do |product| %>
    <div class="w-full py-4 px-8 bg-white text-center shadow-lg rounded-lg my-20">
      <div>
        <%= link_to product.name, product , class:'text-black text-2xl text-center font-semibold mt-4' %>
        <p class="text-2xl text-center"><%= pluralize(product.variants.count, "variants") %></p>
        <div class="flex  justify-center space-x-4 mt-5">
          <div>
            <%= link_to "ver detalles", product, class: "px-4 py-2 rounded-md text-sm font-medium border-0 focus:outline-none focus:ring transition text-white bg-yellow-500 hover:bg-yellow-600 active:bg-yellow-700 focus:ring-yellow-300" %>
          </div>
        </div>
      </div>
      <div class="flex justify-end mt-4">
        <p  class="text-sm font-medium text-indigo-500">creado <%= product.created_at.to_formatted_s(:long) %></p>

      </div>
    </div>
  <% end %>


</div>
<div class="flickr_pagination flex justify-center mb-5">
  <%= page_entries_info @products %>
  <%= will_paginate @products, :container => false %>
</div>